////////////////////////////////////////////////////////////////////////////////////////////////////////////
// monochromatic texture mapping of viewport span, fragment shader
////////////////////////////////////////////////////////////////////////////////////////////////////////////

out vec4 xx_FragColor;

uniform usampler2DRect albedo_map;

void main() {
	uvec4 tex = texture(albedo_map, gl_FragCoord.xy);

	xx_FragColor = tex.xxxx * vec4(1.0 / 255.0);
}
